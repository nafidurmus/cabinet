.wrapper_with_padding
	#docs.clearfix
		- unless @docs.blank?
			- @docs.each do |doc|
				%a{ href: (url_for [doc])}
					.doc
						%p.title= doc.title
						%p.date= time_ago_in_words(doc.created_at)
						%p.content= truncate(doc.content, lenght:100)
		- else 
			%h2 Create Doc
			%p Start creating docs
			%button= link_to "Create Doc", new_doc_path
